{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",     // для React 17+
    "lib": ["dom", "esnext"],
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["cypress", "node"],
    "types": ["react", "react-dom"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"]
    },
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "src", 
    "cypress"
, "declarations.d.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}